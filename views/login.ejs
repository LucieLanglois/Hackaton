<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticetac</title>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
          
            <div class="row col-12">
            <a class="navbar-brand" href="#">
                <img src="/images/train.png" width="30" height="24">
              </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 offset-md-4"></ul>
               <!-- <ul class="col-12 text-center get_started"></ul> -->
                <li class="nav-item">
            <a class="nav-link" href="#">Ticetac</a>
        </li>
            <ul class="navbar-nav ml-auto"></ul>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Connection</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">My last trips</a>
              </li>
          </div>
        </div>
      </nav>

      <div class="home">
        <div class="container-fluid">

        <div class="row">

                    <!-- SIGN IN AREA -->
                    <div class="col-12 col-sm-4 offset-md-12 text-center">

                        <div class="formArea">
            
                          <h4 class="titleForm">Sign In</h4>
            
                          <form action="/users/sign-in" method="POST">
                            <div class="form-group">
                              <label for="exampleInputEmail1">Email address</label>
                              <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Password</label>
                              <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
                            </div>
            
                            <button type="submit" class="btn btn-danger">Confirm</button>
                          </form>
            
                        </div>
            
                      </div>

          <!-- SIGN UP AREA -->
          <div class="col-6 col-sm-6 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign Up</h4>

              <form action="/users/sign-up" method="POST">
                <div class="form-group">
                  <label for="exampleInputUsername">Username</label>
                  <input name="usernameFromFront" type="text" class="form-control" placeholder="Enter username">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="passwordFromFront" type="password" class="form-control"  placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>
            </div>

          </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
